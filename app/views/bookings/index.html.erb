<h1>Bookings</h1>
<a href="/bookings/new">MAKE A BOOKING JEEZ</a>
<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Destination</th>
      <th>Start</th>
      <th>End</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.customer_name %></td>
        <td><%= booking.destination %></td>
        <td><%= booking.start_at %></td>
        <td><%= booking.end_at %></td>
        <td>
          <%= link_to "Edit", edit_booking_path(booking) %>
          <!-- <a href="/bookings/<%= booking.id %>/edit">Edit</a> -->

          <%= link_to "Delete", "/bookings/#{booking.id}", method: 'delete' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
