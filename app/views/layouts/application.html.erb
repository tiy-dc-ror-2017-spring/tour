<!DOCTYPE html>
<html>
  <head>
    <title>Tour</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if flash[:error] %>
      <p class="message error"><%= flash[:error] %></p>
    <% end %>

    <% if flash[:success] %>
      <p class="message success"><%= flash[:success] %></p>
    <% end %>

    <nav>
      <% if current_user %>
        <li>Welcome, <%= current_user.email %>!</li>
        <li><%= link_to "Log Out", sessions_path, method: :delete %></li>
      <% else %>
        <li><%= link_to "Sign In", new_sessions_path %></li>
        <li><%= link_to "Sign Up", new_user_path %></li>
      <% end %>

    </nav>

    <%= yield %>

    <pre>
      <code>
        <%= session.to_hash %>

      </code>
    </pre>
  </body>
</html>
